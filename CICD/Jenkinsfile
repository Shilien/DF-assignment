pipeline {
    agent any

    triggers {
        pollSCM('H * * * 1-5')
    }

    stages {
        stage('Dependencies') {
            steps {
                sh '''
                wget https://dot.net/v1/dotnet-install.sh -O dotnet-install.sh
                chmod +x ./dotnet-install.sh
                ./dotnet-install.sh --version latest
                '''
            }
        }
        stage('Build') {
            steps {
                dir('CICD') {
                    sh '''
                    dotnet build
                    '''
                }
            }
        }
        stage('Test') {
            steps {
                sh "dotnet test"
            }
        }

        stage('Deploy') {
            steps {
                sh "dotnet deploy"
            }
        }
    }
}
